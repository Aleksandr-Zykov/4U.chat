@inherits LayoutComponentBase

<div class="blank-layout">
    @Body
</div>

<script>
    // Function to apply theme for auth pages
    function applyAuthPageStyles() {
        try {
            // Apply theme from localStorage
            const savedTheme = localStorage.getItem('theme');
            if (savedTheme === 'light') {
                document.body.classList.add('light-theme');
            } else {
                document.body.classList.remove('light-theme');
            }
            
            // Fix scrolling for auth pages
            document.body.style.overflow = 'auto';
            document.body.style.height = 'auto';
            document.body.style.minHeight = '100vh';
        } catch (e) {
            console.log('Error applying auth page styles:', e);
        }
    }
    
    // Apply immediately and on page load
    applyAuthPageStyles();
    if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', applyAuthPageStyles);
    }
</script>

<style>
.blank-layout {
    min-height: 100vh;
    background: 
        radial-gradient(ellipse at top, rgba(164, 61, 105, 0.1) 0%, transparent 50%),
        radial-gradient(ellipse at bottom right, rgba(164, 61, 105, 0.08) 0%, transparent 50%),
        linear-gradient(135deg, #0f0f14 0%, #1a1a1f 100%);
}

body.light-theme .blank-layout {
    background: 
        radial-gradient(ellipse at top, rgba(164, 61, 105, 0.15) 0%, transparent 50%),
        radial-gradient(ellipse at bottom right, rgba(164, 61, 105, 0.12) 0%, transparent 50%),
        linear-gradient(135deg, #faf9fb 0%, #f0f0f0 100%);
}
</style>